# Deep Intelligence API Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: Perplexity AI API Key
# Get your key from: https://www.perplexity.ai/settings/api
PPLX_API_KEY1=your_perplexity_api_key_here

# REQUIRED: Path to your data file
# Can be Excel (.xlsx) or CSV (.csv) format
DATA_PATH=/path/to/your/data/file.xlsx

# Optional: Logo path for UI (Streamlit only)
LOGO_PATH=/path/to/your/logo.svg

# Optional: Server Configuration
HOST=0.0.0.0
PORT=8005

# Optional: CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: Logging Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=True

# Optional: MongoDB Configuration (if using database)
MONGO_URL=mongodb://localhost:27017
DB_NAME=bizpulse

# Optional: JWT Configuration (if using authentication)
JWT_SECRET=your_jwt_secret_here

# Optional: Azure Blob Storage (if using cloud storage)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_CONTAINER_NAME=your_container_name

# Security Notice:
# - NEVER commit your .env file to version control
# - Add .env to your .gitignore file
# - Use different keys for development and production
# - Rotate your keys regularly for security

